<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:id="@+id/frameFragment"
    tools:context="com.example.fedet.entregablematerialdesign.View.Fragment.FragmentDetalleRecetas"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imagenRecetaDetalle"
        android:src="@drawable/canastitas"
       />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/linea"
        android:layout_below="@+id/imagenRecetaDetalle"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textoNombreRecetaDetalle"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Nombre"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textoDescRecetaDetalle"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:text="Descripcion de la receta. Aca se va a poner la informacion de la receta establecida. Aca se va a poner la informacion de la receta establecida. Aca se va a poner la informacion de la receta establecida"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_below="@+id/textoNombreRecetaDetalle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/buttonReceta"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="PEDI TU RECETA!"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />


</RelativeLayout>
