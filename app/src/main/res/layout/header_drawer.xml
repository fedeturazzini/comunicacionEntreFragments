<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="180dp"
    android:padding="5dp"
    android:background="@drawable/fondoheader">


    <ImageView
        android:id="@+id/imagenUsuario"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/imagenyon" />

    <TextView
        android:id="@+id/usuarioNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Federico Turazzini"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="fede.turazzini@gmail.com"
        android:layout_below="@+id/usuarioNavigation"
        android:textColor="#FFFFFF"
        android:layout_alignStart="@+id/usuarioNavigation"
        android:id="@+id/textView"
        android:layout_gravity="center"/>

</LinearLayout>