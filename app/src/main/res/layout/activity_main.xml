<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout

    android:id="@+id/drawerLayoutId"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comidabackground2"
    tools:context="com.example.fedet.entregablematerialdesign.View.Activites.ActivityMain">

    <FrameLayout
        android:id="@+id/contenedorFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_restaurant_black_24dp"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido!"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Nos apasiona la comida y queremos que puedas disfrutarla de la manera más facil"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            />

    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigationdrawer"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_drawer"/>



</android.support.v4.widget.DrawerLayout>
